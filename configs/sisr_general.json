{
    # training settings
    "HR_size": 96, # High resolution image size
    "batch_size": 32, 
    "epochs": 80,
    "lr": 2e-4,
    "print_freq": 100,
    "num_workers": 8, 
    "gpu_id": 0,
    "model_dir": "./models_save",
    "log_dir": "./logs_save",
    "resume": "",
    "milestones": [20, 40, 50, 60, 65, 70, 75, 80],
    "weight_decay": 0,

    # network architecture
    "wf": 64,
    "dep_U": 3,
    "dep_S": 5,

    # training and validation data path
    "DIV2K_HR_train_path": "/ssd1t/DIV2K/DIV2K_small_train_HR.hdf5", 
    "DIV2K_HR_valid_path": "./test_data/Set14", # *.bmp,

    # degradation process
    "scale": 2,
    "kernel_size": 15,
    "noise_level": [0, 25],
    "kernel_size_test": 1.6,
    "noise_level_test": 0,
    "downsampler": "Direct",

    # hyper-parameters of our model
    "eps2": 1e-6,
    "radius": 5,

    # cliping the gradient
    "clip_grad": 5e3 
}
